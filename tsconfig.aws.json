{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "outFile": "./aws-lambda.js",
        "sourceRoot": "./src/",
        "rootDir": "./src/",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "*": ["node_modules/"]
        },
    },
    "include": [
        "src/**/*",
        "node_modules/**/*"
    ]
}